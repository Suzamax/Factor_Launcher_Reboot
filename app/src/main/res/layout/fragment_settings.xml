<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="binding" type="com.factor.launcher.fragments.SettingsFragment"/>
    </data>

    <!--root layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#1B1B1B"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!--demo-->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/demo_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="20dp">

            <!--demo background-->
            <androidx.cardview.widget.CardView
                    android:id="@+id/demo_background"
                    android:translationZ="-50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="5dp">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#053257"
                        android:src="@drawable/city_welcome_background"
                        android:scaleType="centerCrop"/>

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/static_blur_preview_image"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#053257"
                        android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <!--search bar holder-->
            <androidx.cardview.widget.CardView
                    android:id="@+id/search_base"
                    android:translationZ="10dp"
                    app:cardElevation="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="5dp">
                <eightbitlab.com.blurview.BlurView
                        android:id="@+id/search_blur"
                        app:blurOverlayColor="#4DFFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <androidx.appcompat.widget.SearchView
                                android:id="@+id/search_view"
                                android:layout_width="match_parent"
                                app:searchIcon="@null"
                                app:queryHint="@string/search"
                                android:background="@android:color/transparent"
                                app:queryBackground="@android:color/transparent"
                                android:layout_height="match_parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:focusable="false"
                                android:layout_marginEnd="50dp"
                                app:iconifiedByDefault="false"
                                android:imeOptions="actionDone"/>
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/menu_button"
                                android:contentDescription="@string/options"
                                android:layout_width="50dp"
                                android:src="@drawable/icon_menu"
                                android:background="@android:color/transparent"
                                android:layout_height="match_parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </eightbitlab.com.blurview.BlurView>
            </androidx.cardview.widget.CardView>

            <!--demo tile (wide)-->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/demo_base"
                    android:layout_width="320dp"
                    android:layout_height="160dp"
                    android:layout_marginVertical="20dp"
                    app:layout_constraintTop_toBottomOf="@id/search_base"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <!--background-->
                <androidx.cardview.widget.CardView
                        android:id="@+id/demo_card"
                        android:translationZ="-20dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <eightbitlab.com.blurview.BlurView
                            android:id="@+id/demo_blur"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <!--base-->
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:translationZ="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!--app label-->
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tileLabel"
                            android:text="@string/app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:maxWidth="120dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="40dp"/>

                    <!--app icon-->
                    <com.factor.launcher.ui.ElevationImageView
                            android:id="@+id/tileIcon"
                            android:src="@mipmap/factor_icon_round"
                            android:layout_height="70dp"
                            android:layout_width="70dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:elevation="50dp"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    <!--guidelines-->
                    <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".5"/>
                    <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.50"/>
                    <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_horizontal_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.80"/>


                    <!--notification title-->
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/notification_title"
                            android:text= "@string/demo_notification_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="2dp"
                            android:layout_marginHorizontal="20dp"
                            android:textColor="#000000"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="false"
                            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal"
                            app:layout_constraintStart_toEndOf="@id/tileIcon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <!--notification content-->
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/notification_content"
                            android:layout_width="0dp"
                            android:text="@string/demo_notification_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#000000"
                            android:lines="1"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:layout_constraintTop_toBottomOf="@id/notification_title"
                            app:layout_constraintStart_toEndOf="@id/tileIcon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_bottom"/>


                    <!--notification count-->
                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/notification_count"
                            android:background="@drawable/round_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/demo_notification_counter"
                            android:textAlignment="gravity"
                            android:layout_marginVertical="10dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--app settings-->
        <com.factor.bouncy.BouncyNestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="260dp"
                android:paddingBottom="50dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/demo_space">
            <androidx.cardview.widget.CardView
                    android:id="@+id/root_card"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:background="#1B1B1B"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    <!--toggles section-->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/toggles_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="5dp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical">

                            <!--blur effect toggle-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/blur_toggle_base"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/blur_toggle_label"
                                        android:text="@string/blur_effect"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"/>
                                <com.google.android.material.switchmaterial.SwitchMaterial
                                        android:id="@+id/blur_toggle"
                                        android:hapticFeedbackEnabled="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/SettingsTheme"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!--static blur option-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/static_blur_base"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/static_blur_label"
                                        android:text="@string/use_static_blur_for_better_performance"
                                        android:layout_width="0dp"
                                        android:maxLines="3"
                                        android:ellipsize="end"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/static_blur_toggle" />
                                <com.google.android.material.switchmaterial.SwitchMaterial
                                        android:id="@+id/static_blur_toggle"
                                        android:hapticFeedbackEnabled="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/SettingsTheme"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!--dark text toggle-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:text="@string/use_dark_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"/>
                                <com.google.android.material.switchmaterial.SwitchMaterial
                                        android:id="@+id/dark_text_toggle"
                                        android:hapticFeedbackEnabled="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/SettingsTheme"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!--dark icon toggle-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:text="@string/use_dark_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"/>
                                <com.google.android.material.switchmaterial.SwitchMaterial
                                        android:id="@+id/dark_icon_toggle"
                                        android:hapticFeedbackEnabled="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/SettingsTheme"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!--icon shadow toggle-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:text="@string/show_shadow_under_tile_icons"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"/>
                                <com.google.android.material.switchmaterial.SwitchMaterial
                                        android:id="@+id/icon_shadow_toggle"
                                        android:hapticFeedbackEnabled="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/SettingsTheme"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                    <!--sliders section-->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/sliders_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="5dp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:text="@string/blur_radius"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"/>

                            <com.google.android.material.slider.Slider
                                    android:id="@+id/blur_radius_slider"
                                    android:enabled="true"
                                    android:valueFrom="1"
                                    android:valueTo="20"
                                    android:stepSize="1"
                                    android:hapticFeedbackEnabled="true"
                                    android:layout_marginHorizontal="10dp"
                                    app:haloColor="@android:color/transparent"
                                    app:thumbColor="@color/colorAccent"
                                    app:tickColorActive="@color/colorAccent"
                                    app:tickColorInactive="@color/colorPrimary"
                                    app:trackColorActive="@color/colorAccent"
                                    app:trackColorInactive="@color/colorPrimary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:text="@string/tile_corner_radius"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"/>

                            <com.google.android.material.slider.Slider
                                    android:id="@+id/corner_radius_slider"
                                    android:valueFrom="0"
                                    android:valueTo="20"
                                    android:stepSize="1"
                                    android:hapticFeedbackEnabled="true"
                                    android:layout_marginHorizontal="10dp"
                                    app:haloColor="@android:color/transparent"
                                    app:thumbColor="@color/colorAccent"
                                    app:tickColorActive="@color/colorAccent"
                                    app:tickColorInactive="@color/colorPrimary"
                                    app:trackColorActive="@color/colorAccent"
                                    app:trackColorInactive="@color/colorPrimary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:text="@string/home_screen_width"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"/>

                            <com.google.android.material.slider.Slider
                                    android:id="@+id/tile_list_scale_slider"
                                    android:valueFrom="0.7"
                                    android:valueTo="0.8"
                                    android:stepSize="0.01"
                                    android:hapticFeedbackEnabled="true"
                                    android:layout_marginHorizontal="10dp"
                                    app:haloColor="@android:color/transparent"
                                    app:thumbColor="@color/colorAccent"
                                    app:tickColorActive="@color/colorAccent"
                                    app:tickColorInactive="@color/colorPrimary"
                                    app:trackColorActive="@color/colorAccent"
                                    app:trackColorInactive="@color/colorPrimary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>




                            <androidx.appcompat.widget.AppCompatTextView
                                    android:text="@string/tile_margin"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"/>

                            <com.google.android.material.slider.Slider
                                    android:id="@+id/tile_margin_slider"
                                    android:valueFrom="5"
                                    android:valueTo="15"
                                    android:stepSize="1"
                                    android:hapticFeedbackEnabled="true"
                                    android:layout_marginHorizontal="10dp"
                                    app:haloColor="@android:color/transparent"
                                    app:thumbColor="@color/colorAccent"
                                    app:tickColorActive="@color/colorAccent"
                                    app:tickColorInactive="@color/colorPrimary"
                                    app:trackColorActive="@color/colorAccent"
                                    app:trackColorInactive="@color/colorPrimary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                    <!--color pickers section-->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/color_picker_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="5dp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical">

                            <!--tile color-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <FrameLayout
                                        android:id="@+id/tile_color_icon"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:text="@string/tile_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/tile_color_icon"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/tile_color_value"
                                        android:hint="@string/color_value_hint"
                                        android:textSize="13sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="wrap_content">
                                <com.google.android.material.button.MaterialButton
                                        android:id="@+id/tile_color_picker_button"
                                        android:text="@string/choose"
                                        android:backgroundTint="@color/colorAccent"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>




                            <!--Search bar color-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <FrameLayout
                                        android:id="@+id/search_bar_color_icon"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:text="@string/search_bar_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/search_bar_color_icon"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/search_bar_color_value"
                                        android:hint="@string/color_value_hint"
                                        android:textSize="13sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <com.google.android.material.button.MaterialButton
                                        android:id="@+id/search_bar_color_picker_button"
                                        android:text="@string/choose"
                                        android:backgroundTint="@color/colorAccent"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
